\section{Haskell}

\begin{frame}\frametitle{The frame ith name}
\lstset{language=haskell}
\begin{lstlisting}[frame=single]
main = do
  as <- getArgs
  return as
\end{lstlisting} 

 \lstset{language=C}
\begin{lstlisting}[frame=none]
int main (args* char[]){
   return c + 3;
}
\end{lstlisting}
\end{frame}

